{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/main.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/dist/**", "backend/prisma/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/dist/main.js"
    }
  ],
  "functions": {
    "backend/dist/main.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
